{
	"manifest_version": 2,

	"name": "snowe",
	"description": "DKSS project tool for ServiceNow",
	"version": "0.4.0",
	"background": {
		"scripts": ["js/background.js"]
	},
	"browser_action": {
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "icons/s.png",
    "48": "icons/s.png",
    "128": "icons/s.png" },
	"permissions": [
		"activeTab"
	],
	"content_scripts": [
		{
			"matches": ["https://*.service-now.com/*"],
			"js": ["js/content.js"]
		}
	]
}
